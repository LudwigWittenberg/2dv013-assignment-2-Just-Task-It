<div class="login-container">
  <h1>Sign in</h1>

<fieldset class="login-paper">
     <legend class="paper-text">Sign in</legend>
     <div class="login-container">
        <form method="post" action="./user/login" class="login-form">
            <fieldset class="form-paper">
                <legend class="form-text">Username</legend>
                <input type="text" name="username" placeholder="Enter Username" required class="login-input">
            </fieldset>
            <fieldset class="form-paper">
                <legend class="form-text">Password</legend>
                <input type="password" name="password" placeholder="Enter Password" class="login-input" required>
            </fieldset>
                <input class="login-btn form-paper" type="submit" value="Sign in">
        </form>
        <div>
            <span class="login-text">Don't have an account?</span>
            <a href="./user/register" class="login-text">Register</a>
        </div>
    </div>
</fieldset>

</div>